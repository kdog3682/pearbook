*
    box-sizing: border-box
    margin: 0
    padding: 0


html
    zoom: 1
$color-text-dark: rgba(255, 255, 255, 0.87)
$color-bg-dark: #242424
$color-link-normal: #646cff
$color-link-hover-dark: #535bf2
$color-link-hover-light: #747bff
$color-button-bg-dark: #1a1a1a
$color-button-bg-light: #f9f9f9
$color-text-light: #213547
$color-bg-light: #ffffff

:root
  font-family: Inter, system-ui, Avenir, Helvetica, Arial, sans-serif
  line-height: 1.5
  font-weight: 400

  color-scheme: light dark
  color: $color-text-dark
  background-color: $color-bg-dark

  font-synthesis: none
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

a
  font-weight: 500
  color: $color-link-normal
  text-decoration: inherit

a:hover
  color: $color-link-hover-dark


h1
  font-size: 3.2em
  line-height: 1.1

button
  border-radius: 8px
  border: 1px solid transparent
  padding: 0.6em 1.2em
  font-size: 1em
  font-weight: 500
  font-family: inherit
  background-color: $color-button-bg-dark
  cursor: pointer
  transition: border-color 0.25s

button:hover
  border-color: $color-link-normal

button:focus,
button:focus-visible
  outline: 4px auto -webkit-focus-ring-color

.card
  padding: 2em


#app
    width: 100vw
    background: yellow
    border: 10px solid black

@media (prefers-color-scheme: light)
  :root
    color: $color-text-light
    background-color: $color-bg-light

  a:hover
    color: $color-link-hover-light

  button
    background-color: $color-button-bg-light

